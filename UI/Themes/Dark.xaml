<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- TRUE DARK - PURE SEX -->
    <SolidColorBrush x:Key="MainBackgroundBrush"                      Color="#111111"/>
    <SolidColorBrush x:Key="CardBackgroundBrush"                      Color="#1A1A1A"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush"                    Color="#161616"/>
    <SolidColorBrush x:Key="TextPrimaryBrush"                         Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush"                       Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextMutedBrush"                           Color="#AAAAAA"/>
    <SolidColorBrush x:Key="BorderBrush"                              Color="#333333"/>
    <SolidColorBrush x:Key="HoverBrush"                               Color="#004D33"/>
    <SolidColorBrush x:Key="PressedBrush"                             Color="#2F2F2F"/>
    <SolidColorBrush x:Key="SidebarHoverBrush"                        Color="#3A3A3A"/>
    <SolidColorBrush x:Key="TitleBarButtonHoverBrush"                 Color="#404040"/>
    <SolidColorBrush x:Key="ComboBoxItem.SelectedBackground"          Color="#003322"/>
    <SolidColorBrush x:Key="ComboBoxItem.SelectedForeground"          Color="#00FF9D"/>
    <SolidColorBrush x:Key="ComboBoxItem.SelectedHoverBackground"     Color="#004D33"/>

    <Color x:Key="AccentColor">#00FF9D</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColor">#1A1A1A</Color>
    
    <SolidColorBrush x:Key="AccentBrush"              Color="#00FF9D"/>
</ResourceDictionary>