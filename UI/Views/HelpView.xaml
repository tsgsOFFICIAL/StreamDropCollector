<UserControl x:Class="UI.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="{DynamicResource MainBackgroundBrush}">

    <UserControl.Resources>
        <!-- NEON HYPERLINK - THE ACCENT IS NOW DYNAMIC -->
        <Style x:Key="NeonHyperlink" TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#00FFAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- SECTION TITLE - ACCENT GLOW -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- BODY TEXT - CLEAN & READABLE -->
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Text="Help &amp; Support"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">

                <!-- GETTING STARTED -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12" Padding="28" Margin="0,0,0,32"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Getting Started" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Style="{StaticResource BodyText}">
                            <Run Text="1. Log in to your Twitch &amp; Kick accounts to enable drops tracking." 
                                 Foreground="{DynamicResource AccentBrush}"/><LineBreak/>
                            <Run Text="2. Head to the Dashboard to watch your miner status and campaign progress in real time." 
                                 Foreground="{DynamicResource TextMutedBrush}"/><LineBreak/>
                            <Run Text="3. Use the sidebar to switch between Inventory, Settings, and this Help page." 
                                 Foreground="{DynamicResource TextMutedBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- INVENTORY -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12" Padding="28" Margin="0,0,0,32"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Inventory Tracking" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Style="{StaticResource BodyText}">
                            All active campaigns and collected drops are displayed here with live progress per streamer.<LineBreak/>
                            Make sure your accounts are linked - rewards update automatically when claimed.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- SETTINGS -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12" Padding="28" Margin="0,0,0,32"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Settings" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Style="{StaticResource BodyText}">
                            Customize auto-claim, notifications, theme, and more.<LineBreak/>
                            All changes are saved instantly - no "Apply" button needed.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- SUPPORT & COMMUNITY -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12" Padding="28"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Support &amp; Community" Style="{StaticResource SectionTitle}"/>
                        <TextBlock FontSize="15" 
                                   Foreground="{DynamicResource TextMutedBrush}" 
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap">
                            Found a bug? Need help? Want to flex your drops?<LineBreak/>
                            Join the community - we're all farmers here.
                        </TextBlock>

                        <!-- DISCORD -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Path Data="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027c-3.1 4.65-3.95 9.194-3.537 13.675a.079.079 0 0 0 .031.028a19.85 19.85 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.027a13.958 13.958 0 0 0 1.226-2.04a.077.077 0 0 0-.042-.105a13.013 13.013 0 0 1-1.858-.88a.077.077 0 0 1-.008-.128a13.947 13.947 0 0 0 11.88 0a.077.077 0 0 1-.008.128a13.013 13.013 0 0 1-1.858.88a.077.077 0 0 0-.042.105a13.958 13.958 0 0 0 1.226 2.04a.078.078 0 0 0 .084.027a19.85 19.85 0 0 0 5.993-3.03a.079.079 0 0 0 .031-.028c.493-5.62-.749-10.13-3.537-13.675a.07.07 0 0 0-.032-.027zM8.02 13.96c-1.184 0-2.16-1.087-2.16-2.42c0-1.333.956-2.42 2.16-2.42c1.225 0 2.18 1.087 2.16 2.42c0 1.333-.935 2.42-2.16 2.42zm7.96 0c-1.184 0-2.16-1.087-2.16-2.42c0-1.333.956-2.42 2.16-2.42c1.225 0 2.18 1.087 2.16 2.42c0 1.333-.935 2.42-2.16 2.42z"
                                  Fill="{DynamicResource AccentBrush}" Width="25" Height="25" Margin="0,0,12,0"/>
                            <TextBlock FontSize="16" VerticalAlignment="Center">
                                <Hyperlink Style="{StaticResource NeonHyperlink}"
                                           NavigateUri="https://discord.gg/Cddu5aJ"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    Discord Community
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <!-- GITHUB -->
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                                  Fill="{DynamicResource AccentBrush}" Width="25" Height="25" Margin="0,0,12,0"/>
                            <TextBlock FontSize="16" VerticalAlignment="Center">
                                <Hyperlink Style="{StaticResource NeonHyperlink}"
                                           NavigateUri="https://github.com/tsgsOFFICIAL/StreamDropCollector"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    GitHub Repository
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- SIGNATURE -->
                <TextBlock Text="Made with rage, caffeine, and zero sleep by tsgsOFFICIAL"
                           Foreground="{DynamicResource TextMutedBrush}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,60,0,0"
                           FontStyle="Italic"/>

                <!-- DONATION - ABSOLUTE DOMINATION -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="16" Padding="32" Margin="0,60,0,40"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="FUEL THE MACHINE"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{DynamicResource AccentColor}" 
                                                  ShadowDepth="0" BlurRadius="10" Opacity="0.69"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <TextBlock Text="This tool is 100% free. Always will be.&#10;But if you’re farming 24/7 and want to throw some ammo at the dev..."
                                   FontSize="15"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   LineHeight="24"
                                   Margin="0,0,0,24"/>

                        <!-- COFFEE BUTTON - STILL LEGENDARY, NOW THEMED -->
                        <Button x:Name="BuyMeCoffeeButton"
                                Width="380"
                                Height="70"
                                Cursor="Hand"
                                Background="{DynamicResource AccentBrush}"
                                BorderThickness="0"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="Black"
                                Content="BUY ME A COFFEE"
                                Click="OnBuyMeCoffeeButtonClicked">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="35"
                                            Padding="20">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                        <Border.Effect>
                                            <DropShadowEffect Color="{DynamicResource AccentColor}"
                                                              BlurRadius="30"
                                                              ShadowDepth="0"
                                                              Opacity="0.8"/>
                                        </Border.Effect>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00FFAA"/>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#00CC77"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.RenderTransform>
                                <ScaleTransform/>
                            </Button.RenderTransform>
                        </Button>

                        <TextBlock Text="Your drops. My war. Let’s keep winning."
                                   FontSize="14"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>