<UserControl x:Class="UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MainBackgroundBrush}">

    <UserControl.Resources>
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="Root">

                            <!-- Track -->
                            <Border CornerRadius="7" Background="{DynamicResource TextMutedBrush}" BorderBrush="#333333" BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="{DynamicResource TextPrimaryColor}" BlurRadius="12" Opacity="0.35"/>
                                </Border.Effect>
                            </Border>

                            <!-- Fill container -->
                            <Border CornerRadius="7" ClipToBounds="True" Margin="1">
                                <Grid>
                                    <!-- Main fill rectangle (driven by Value) -->
                                    <Rectangle x:Name="PART_Indicator"
                                           HorizontalAlignment="Left"
                                           Fill="{TemplateBinding Foreground}"
                                           RadiusX="6" RadiusY="6"/>

                                    <!-- Glow overlay (same width as fill) -->
                                    <Rectangle HorizontalAlignment="Left"
                                           RadiusX="6" RadiusY="6">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0"   Color="#AA00FF9D"/>
                                                <GradientStop Offset="0.4" Color="#FF00FF9D"/>
                                                <GradientStop Offset="1"   Color="#6600FF9D"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <!-- Moving shine -->
                                    <Rectangle Width="80" Opacity="0.7">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Offset="0"   Color="#00FFFFFF"/>
                                                <GradientStop Offset="0.4" Color="#99FFFFFF"/>
                                                <GradientStop Offset="0.5" Color="#FFFFFF"/>
                                                <GradientStop Offset="0.6" Color="#99FFFFFF"/>
                                                <GradientStop Offset="1"   Color="#00FFFFFF"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                        <Rectangle.RenderTransform>
                                            <TranslateTransform x:Name="Shine" X="-100"/>
                                        </Rectangle.RenderTransform>
                                    </Rectangle>
                                </Grid>
                            </Border>

                            <!-- Outer glow -->
                            <Border CornerRadius="8" Margin="-3">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{DynamicResource AccentColor}" Opacity="0.7"/>
                                </Border.BorderBrush>
                                <Border.BorderThickness>3</Border.BorderThickness>
                                <Border.Effect>
                                    <BlurEffect Radius="10"/>
                                </Border.Effect>
                            </Border>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Determinate: Width = Value % of parent -->
                            <Trigger Property="IsIndeterminate" Value="False">
                                <Setter TargetName="PART_Indicator" Property="Width">
                                    <Setter.Value>
                                        <MultiBinding Converter="{StaticResource PercentToWidthMultiConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            <Binding Path="ActualWidth" ElementName="Root"/>
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Indeterminate: full width + shine animation -->
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="{Binding ActualWidth, ElementName=Root}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="Shine"
                                                         Storyboard.TargetProperty="X"
                                                         From="-100" To="500" Duration="0:0:3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Dashboard"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"/>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- MINER STATUS CARD -->
            <Border Grid.Row="0" Grid.Column="0"
                    Margin="0,0,20,20"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Miner Status"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>
                    <TextBlock x:Name="MinerStatusText"
                               Text="{Binding MinerStatus, FallbackValue=Active}"
                               Foreground="Orange"
                               FontSize="28"
                               Margin="0,10,0,0"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="MinerStatusDetails"
                               Text="Waiting for next drop window..."
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- CAMPAIGN PROGRESS CARD -->
            <Border Grid.Row="0" Grid.Column="1"
                    Margin="0,0,0,20"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Campaign Progress"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>

                    <ProgressBar x:Name="CampaignProgressBar"
                               Height="20"
                               Margin="0,10,0,5"
                               Minimum="0"
                               Maximum="100"
                               Value="50"
                               IsIndeterminate="True"/>

                    <ProgressBar Value="40" Height="20"
                                Margin="0,10,0,5"
                                Minimum="0"
                                Maximum="100"/>
                    
                    <TextBlock x:Name="CampaignProgressText"
                               Text="0% Completed"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- LOGIN STATUS CARD -->
            <Border Grid.Row="1" Grid.Column="0"
                    Margin="0,0,20,0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Connection Status"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>

                    <StackPanel Margin="0,10,0,0">
                        <!-- Twitch Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding TwitchConnectionColor, FallbackValue=Red}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Twitch" FontWeight="Bold" Foreground="{DynamicResource TwitchBrush}"/>
                                <Run Text=" : " Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Run Text="{Binding TwitchConnectionStatus, FallbackValue=Disconnected}" 
                                     FontWeight="SemiBold" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Kick Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding KickConnectionColor, FallbackValue=Red}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Kick" FontWeight="Bold" Foreground="{DynamicResource KickBrush}"/>
                                <Run Text=" : " Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Run Text="{Binding KickConnectionStatus, FallbackValue=Disconnected}" 
                                     FontWeight="SemiBold" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- LOGIN BUTTONS — BRANDED, HARD-CODED (THEY'RE ICONIC) -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">
                            <Button x:Name="KickLoginButton"
                                    Content="Login Kick"
                                    Width="120" Height="36"
                                    Margin="0,0,10,0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="OnKickLoginClick"
                                    IsEnabled="{Binding IsKickLoginEnabled, FallbackValue=False}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#2D9D78" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#34B48F"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#34B48F" Opacity="0.5" BlurRadius="10" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#257A63"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="TwitchLoginButton"
                                    Content="Login Twitch"
                                    Width="120" Height="36"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="OnTwitchLoginClick"
                                    IsEnabled="{Binding IsTwitchLoginEnabled, FallbackValue=False}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#9146FF" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#A970FF"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#A970FF" Opacity="0.5" BlurRadius="12" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#772CE8"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- STREAMERS LIST -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Available Streamers"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"
                               Margin="0,0,0,10"/>

                    <ListView x:Name="StreamerList"
                              Background="{DynamicResource MainBackgroundBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderThickness="0"
                              Height="260"
                              ItemsSource="{Binding Streamers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,6">
                                    <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="10,0,0,0"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="{Binding DropInfo}"
                                               Foreground="{DynamicResource TextMutedBrush}"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>