<UserControl x:Class="UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==========================================================
             HEADER
        ========================================================== -->
        <TextBlock Text="Dashboard"
                   FontSize="30"
                   Foreground="White"
                   FontWeight="Bold"/>

        <!-- ==========================================================
             MAIN CONTENT
        ========================================================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ======================================================
                 MINER STATUS CARD
            ====================================================== -->
            <Border Grid.Row="0" Grid.Column="0" Margin="0,0,20,20" Background="#252526" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Miner Status" Foreground="#CCCCCC" FontSize="16"/>
                    <TextBlock x:Name="MinerStatusText" Text="Idle" Foreground="Orange" FontSize="28" Margin="0,10,0,0" FontWeight="SemiBold"/>
                    <TextBlock x:Name="MinerStatusDetails" Text="Waiting for next drop window..." Foreground="#AAAAAA" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- ======================================================
                 CAMPAIGN PROGRESS CARD
            ====================================================== -->
            <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,20" Background="#252526" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Campaign Progress" Foreground="#CCCCCC" FontSize="16"/>
                    <ProgressBar x:Name="CampaignProgressBar" Height="20" Margin="0,10,0,5" Minimum="0" Maximum="100" Value="0"/>
                    <TextBlock x:Name="CampaignProgressText" Text="0% Completed" Foreground="#AAAAAA" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- ======================================================
                 LOGIN STATUS CARD
            ====================================================== -->
            <Border Grid.Row="1" Grid.Column="0" Margin="0,0,20,0" Background="#252526" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Connection Status" Foreground="#CCCCCC" FontSize="16"/>

                    <!-- Each status line uses Margin for spacing -->
                    <StackPanel Margin="0,10,0,0">
                        <!-- Twitch Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding TwitchConnectionColor}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Twitch" FontWeight="Bold" Foreground="#A666FF"/>
                                <Run Text=" : " Foreground="White"/>
                                <Run Text="{Binding TwitchConnectionStatus}" FontWeight="SemiBold" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Kick Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding KickConnectionColor}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Kick" FontWeight="Bold" Foreground="#5FF41C"/>
                                <Run Text=" : " Foreground="White"/>
                                <Run Text="{Binding KickConnectionStatus}" FontWeight="SemiBold" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- ===========================
                             LOGIN BUTTONS
                        =========================== -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">

                            <!-- Kick Login Button -->
                            <Button x:Name="KickLoginButton"
                                Content="Login Kick"
                                Width="120" Height="36"
                                Margin="0,0,10,0"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="LoginKick_Click"
                                IsEnabled="False">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                            Background="#2D9D78" 
                                            CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#34B48F"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#34B48F" Opacity="0.5" BlurRadius="10" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#257A63"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                <Setter Property="Foreground" Value="#888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="#888"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Twitch Login Button -->
                            <Button x:Name="TwitchLoginButton"
                                Content="Login Twitch"
                                Width="120" Height="36"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="LoginTwitch_Click"
                                IsEnabled="False">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                            Background="#9146FF" 
                                            CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#A970FF"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#A970FF" Opacity="0.5" BlurRadius="12" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#772CE8"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                <Setter Property="Foreground" Value="#888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="#888"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ======================================================
                 STREAMERS LIST
            ====================================================== -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Background="#252526" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Available Streamers" Foreground="#CCCCCC" FontSize="16" Margin="0,0,0,10"/>

                    <ListView x:Name="StreamerList" Background="#1E1E1E" BorderThickness="0" Foreground="White" Height="260">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,4,4,4">
                                    <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding DropInfo}" Foreground="#AAAAAA" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>