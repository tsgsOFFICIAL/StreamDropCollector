<UserControl x:Class="UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MainBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Dashboard"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"/>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- MINER STATUS CARD -->
            <Border Grid.Row="0" Grid.Column="0"
                    Margin="0,0,20,20"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Miner Status"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>
                    <TextBlock x:Name="MinerStatusText"
                               Text="{Binding MinerStatus, FallbackValue=Active}"
                               Foreground="Orange"
                               FontSize="28"
                               Margin="0,10,0,0"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="MinerStatusDetails"
                               Text="Waiting for next drop window..."
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- CAMPAIGN PROGRESS CARD -->
            <Border Grid.Row="0" Grid.Column="1"
                    Margin="0,0,0,20"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Campaign Progress"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>
                    <ProgressBar x:Name="CampaignProgressBar"
                                 Height="20"
                                 Margin="0,10,0,5"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"/>
                    <TextBlock x:Name="CampaignProgressText"
                               Text="0% Completed"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- LOGIN STATUS CARD -->
            <Border Grid.Row="1" Grid.Column="0"
                    Margin="0,0,20,0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Connection Status"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"/>

                    <StackPanel Margin="0,10,0,0">
                        <!-- Twitch Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding TwitchConnectionColor, FallbackValue=Red}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Twitch" FontWeight="Bold" Foreground="{DynamicResource TwitchBrush}"/>
                                <Run Text=" : " Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Run Text="{Binding TwitchConnectionStatus, FallbackValue=Disconnected}" 
                                     FontWeight="SemiBold" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Kick Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="10" Height="10" Fill="{Binding KickConnectionColor, FallbackValue=Red}" VerticalAlignment="Center"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Kick" FontWeight="Bold" Foreground="{DynamicResource KickBrush}"/>
                                <Run Text=" : " Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Run Text="{Binding KickConnectionStatus, FallbackValue=Disconnected}" 
                                     FontWeight="SemiBold" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- LOGIN BUTTONS — BRANDED, HARD-CODED (THEY'RE ICONIC) -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">
                            <Button x:Name="KickLoginButton"
                                    Content="Login Kick"
                                    Width="120" Height="36"
                                    Margin="0,0,10,0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="OnKickLoginClick"
                                    IsEnabled="{Binding IsKickLoginEnabled, FallbackValue=False}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#2D9D78" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#34B48F"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#34B48F" Opacity="0.5" BlurRadius="10" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#257A63"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="TwitchLoginButton"
                                    Content="Login Twitch"
                                    Width="120" Height="36"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="OnTwitchLoginClick"
                                    IsEnabled="{Binding IsTwitchLoginEnabled, FallbackValue=False}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#9146FF" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#A970FF"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#A970FF" Opacity="0.5" BlurRadius="12" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#772CE8"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- STREAMERS LIST -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Padding="20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Available Streamers"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"
                               Margin="0,0,0,10"/>

                    <ListView x:Name="StreamerList"
                              Background="{DynamicResource MainBackgroundBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderThickness="0"
                              Height="260"
                              ItemsSource="{Binding Streamers}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,6">
                                    <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="10,0,0,0"
                                               FontWeight="Medium"/>
                                    <TextBlock Text="{Binding DropInfo}"
                                               Foreground="{DynamicResource TextMutedBrush}"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>