<UserControl x:Class="UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="800"
             Background="#1E1E1E">

    <!-- ============================================= -->
    <!-- ULTIMATE CUSTOM STYLES — THE HOLY GRAIL -->
    <!-- ============================================= -->
    <UserControl.Resources>

        <!-- MODERN CHECKBOX -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="CheckBoxBorder"
                                    Width="20" Height="20"
                                    CornerRadius="6"
                                    BorderThickness="2"
                                    BorderBrush="#555555"
                                    Background="#2D2D2D"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Data="M 4,10 L 8,14 L 16,6"
                                      Stroke="#00FF9D"
                                      StrokeThickness="3"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Opacity="0"
                                      Stretch="Fill"
                                      Width="12" Height="12"/>
                            </Border>

                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00FF9D"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#003322"/>
                                <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00FF9D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NEON FLAT COMBOBOX — ACTUALLY FINAL THIS TIME (no blue anything, ever) -->
        <SolidColorBrush x:Key="ComboBox.Border.Normal"     Color="#404040"/>
        <SolidColorBrush x:Key="ComboBox.Border.Hover"      Color="#00FF9D"/>
        <SolidColorBrush x:Key="ComboBox.Background.Normal" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="ComboBox.Background.Hover"  Color="#333333"/>
        <SolidColorBrush x:Key="ComboBox.Item.Hover"        Color="#3A3A3A"/>
        <SolidColorBrush x:Key="ComboBox.Item.Selected"     Color="#003322"/>

        <Style x:Key="NeonFlatComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ComboBox.Background.Normal}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ComboBox.Border.Normal}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,0,30,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Our visible border -->
                            <Border x:Name="MainBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"/>

                            <!-- Invisible ToggleButton that only handles clicks — NO visuals, NO focus rectangle -->
                            <ToggleButton x:Name="ToggleButton"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Focusable="False"
                          IsHitTestVisible="True"
                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- Selected text -->
                            <ContentPresenter x:Name="ContentSite"
                              Margin="{TemplateBinding Padding}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Content="{TemplateBinding SelectionBoxItem}"
                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>

                            <!-- Arrow -->
                            <Path x:Name="Arrow"
                  Data="M 0,0 L 6,6 L 12,0 Z"
                  Fill="#AAAAAA"
                  Width="10" Height="6"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Margin="0,0,14,0"/>

                            <!-- Popup -->
                            <Popup x:Name="Popup"
                   Placement="Bottom"
                   IsOpen="{TemplateBinding IsDropDownOpen}"
                   AllowsTransparency="True"
                   Focusable="False"
                   PopupAnimation="Slide">
                                <Border Background="#2D2D2D"
                        BorderBrush="#404040"
                        BorderThickness="2"
                        CornerRadius="8"
                        MinWidth="{TemplateBinding ActualWidth}"
                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer Padding="4" BorderThickness="0">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource ComboBox.Background.Hover}"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource ComboBox.Border.Hover}"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#00FF9D"/>
                            </Trigger>

                            <!-- Open -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#00FF9D"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#00FF9D"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Beautiful items inside the dropdown -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd"
                            Background="Transparent"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="6">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboBox.Item.Hover}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboBox.Item.Selected}"/>
                                            <Setter Property="Foreground" Value="#00FF9D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ACCENT BUTTON -->
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00FF9D"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00FF85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ============================================= -->
    <!-- MAIN LAYOUT — PURE PERFECTION -->
    <!-- ============================================= -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings"
                   FontSize="30"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- GENERAL -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="General" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <CheckBox x:Name="StartWithWindowsCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Start with Windows"
                                  Margin="0,0,0,12"/>

                        <CheckBox x:Name="MinimizeToTrayOnStartupCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Minimize to system tray on startup"
                                  IsEnabled="{Binding ElementName=StartWithWindowsCheckBox, Path=IsChecked}"/>
                    </StackPanel>
                </Border>

                <!-- APPEARANCE -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Appearance" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Theme" Foreground="#AAAAAA" Width="140" VerticalAlignment="Center"/>
                            <ComboBox x:Name="ThemeComboBox"
                                      Width="200"
                                      Style="{StaticResource NeonFlatComboBoxStyle}"
                                      SelectedValuePath="Content">
                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="System"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DROPS BEHAVIOR -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Drops Behavior" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox x:Name="AutoClaimRewardsCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Auto-claim rewards when ready"/>
                    </StackPanel>
                </Border>

                <!-- NOTIFICATIONS -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Notifications" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <CheckBox x:Name="NotifyOnDropUnlockedCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="New drop unlocked"
                                  Margin="0,0,0,12"/>

                        <CheckBox x:Name="NotifyOnReadyToClaimCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Drop ready to claim (only if auto-claim is off)"
                                  Margin="0,0,0,12"
                                  IsEnabled="{Binding ElementName=AutoClaimRewardsCheckBox, Path=IsChecked}"/>

                        <CheckBox x:Name="NotifyOnAutoClaimedCheckBox"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Drop successfully auto-claimed"
                                  Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox x:Name="SoundCheckBox"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Content="Play sound"/>

                            <Button x:Name="TestSoundButton"
                                    Content="Test Sound"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Margin="24,0,0,0"
                                    IsEnabled="{Binding ElementName=SoundCheckBox, Path=IsChecked}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DANGER ZONE -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Accounts" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="DANGER ZONE" Foreground="#FF5555" FontSize="16" FontWeight="Bold" Margin="0,8,0,4"/>
                        <TextBlock Text="Permanently delete ALL logged-in accounts from this device"
                                   Foreground="#FFAAAA" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12"/>

                        <Button x:Name="RemoveAllAccountsButton"
                                Content="Remove ALL Accounts"
                                Background="#B33A3A"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="28,14"
                                HorizontalAlignment="Left"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D44A4A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- COMING SOON -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Opacity="0.5">
                    <StackPanel>
                        <TextBlock Text="Your ideas could be here! (coming soon)" Foreground="#888888" FontSize="16" FontStyle="Italic" Margin="0,0,0,8"/>
                        <TextBlock Text="Drop your suggestions, to have them implemented here" Foreground="#666666" FontSize="13"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>