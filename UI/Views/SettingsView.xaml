<UserControl x:Class="UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="800"
             Background="#1E1E1E">

    <!-- ============================================= -->
    <!-- ULTIMATE CUSTOM STYLES — THE HOLY GRAIL -->
    <!-- ============================================= -->
    <UserControl.Resources>

        <!-- MODERN CHECKBOX -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="CheckBoxBorder"
                                    Width="20" Height="20"
                                    CornerRadius="6"
                                    BorderThickness="2"
                                    BorderBrush="#555555"
                                    Background="#2D2D2D"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Data="M 4,10 L 8,14 L 16,6"
                                      Stroke="#00FF9D"
                                      StrokeThickness="3"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Opacity="0"
                                      Stretch="Fill"
                                      Width="12" Height="12"/>
                            </Border>

                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00FF9D"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#003322"/>
                                <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00FF9D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ULTIMATE COMBOBOX — NO WPF BULLSHIT, JUST PERFECTION -->
        <Style x:Key="UltimateComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="MainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- SELECTED ITEM — THIS WORKS 100% -->
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectedItem}"
                                                      Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="True"/>

                                    <!-- ARROW -->
                                    <ToggleButton x:Name="ToggleButton"
                                      Grid.ColumnSpan="2"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Focusable="False">

                                        <Path x:Name="Arrow"
                                          Data="M 0,0 L 8,8 L 16,0 Z"
                                          Fill="#AAAAAA"
                                          Width="10" Height="6"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- DROPDOWN -->
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   AllowsTransparency="True">
                                <Border Background="#2A2A2A"
                                        BorderBrush="#00FF9D"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="300">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#00FF9D"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#00FF9D"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#00FF9D"/>
                                <Setter TargetName="Arrow" Property="Data" Value="M 0,8 L 8,0 L 16,8 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- ITEM STYLE — SELECTED = GREEN, HOVER = SUBTLE -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Border"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="8">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#00FF9D22"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#00FF9D"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#00FFAA"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ACCENT BUTTON -->
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00FF9D"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00FF85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ============================================= -->
    <!-- MAIN LAYOUT — PURE PERFECTION -->
    <!-- ============================================= -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,30"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- GENERAL -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="General" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  x:Name="StartWithWindowsCheckBox"
                                  Content="Start with Windows"
                                  IsChecked="{Binding StartWithWindows}"
                                  Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Minimize to system tray on startup"                                  
                                  IsEnabled="{Binding ElementName=StartWithWindowsCheckBox, Path=IsChecked}"
                                  IsChecked="{Binding MinimizeToTrayOnStartup}"/>
                    </StackPanel>
                </Border>

                <!-- APPEARANCE -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Appearance" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Theme" Foreground="#AAAAAA" Width="140" VerticalAlignment="Center"/>
                            <ComboBox Width="200"
                                      Style="{StaticResource UltimateComboBoxStyle}"
                                      SelectedValue="{Binding Theme}"
                                      SelectedValuePath="Content">

                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="System"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DROPS BEHAVIOR -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Drops Behavior" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Auto-claim rewards when ready"
                                  IsChecked="{Binding AutoClaimRewards}"/>
                    </StackPanel>
                </Border>

                <!-- NOTIFICATIONS -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Notifications" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="New drop unlocked"
                                  IsChecked="{Binding NotifyOnDropUnlocked}"
                                  Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Drop ready to claim (only if auto-claim is off)"
                                  IsChecked="{Binding NotifyOnReadyToClaim}"
                                  Margin="0,0,0,12"/>
                        <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                  Content="Drop successfully auto-claimed"
                                  IsChecked="{Binding NotifyOnAutoClaimed}"
                                  Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox Style="{StaticResource ModernCheckBoxStyle}"
                                      x:Name="SoundCheckBox"
                                      Content="Play sound"
                                      IsChecked="{Binding PlayNotificationSound}"/>
                            <Button Content="Test Sound"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Margin="24,0,0,0"
                                    IsEnabled="{Binding ElementName=SoundCheckBox, Path=IsChecked}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DANGER ZONE -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Accounts" Foreground="#CCCCCC" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="DANGER ZONE" Foreground="#FF5555" FontSize="16" FontWeight="Bold" Margin="0,8,0,4"/>
                        <TextBlock Text="Permanently delete ALL logged-in accounts from this device"
                                   Foreground="#FFAAAA" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12"/>
                        <Button Content="Remove ALL Accounts"
                                Background="#B33A3A"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="28,14"
                                HorizontalAlignment="Left"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D44A4A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- COMING SOON -->
                <Border Background="#252526" CornerRadius="10" Padding="24" Opacity="0.5">
                    <StackPanel>
                        <TextBlock Text="Your ideas could be here! (coming soon)" 
                                   Foreground="#888888" FontSize="16" FontStyle="Italic" Margin="0,0,0,8"/>
                        <TextBlock Text="Drop your suggestions, to have them implemented here" 
                                   Foreground="#666666" FontSize="13"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>